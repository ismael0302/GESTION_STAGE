<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_planification_form" model="ir.ui.view">
        <field name="name">gestion.planification.form</field>
        <field name="model">gestion.planification</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button 
                        name="action_sauvegarder_stage" 
                        type="object" 
                        string="Enregistrer" 
                        class="btn-primary"/>
                </header>
                <sheet>
                    <group col = "4" >
                    <group colspan = "2">
                        <field name="stage_id"/>
                        <field name="tutor"/>
                        <field name="date_debut"/>
                    </group>
                    
                        <group colspan = "2">
                            <field name="date_fin"/>
                        <field name="taches"/>
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_planification_tree" model="ir.ui.view">
        <field name="name">gestion.planification.tree</field>
        <field name="model">gestion.planification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stage_id"/>
                <field name="tutor"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="taches"/>
            </tree>
        </field>
    </record>

    <record id="action_planification" model="ir.actions.act_window">
        <field name="name">Planifications</field>
        <field name="res_model">gestion.planification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_planification_root" name="Planifications" parent="menu_stage_root" action="action_planification"/>
</odoo>

