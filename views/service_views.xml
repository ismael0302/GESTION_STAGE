<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gestion_service_tree" model="ir.ui.view">
        <field name="name">gestion.service.tree</field>
        <field name="model">gestion.service</field>
        <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="responsable"/>
        </tree>
        </field>
    </record>

    <record id="view_gestion_service_form" model="ir.ui.view">
        <field name="name">gestion.service.form</field>
        <field name="model">gestion.service</field>
        <field name="arch" type="xml">
        <form>
            <group>
            <field name="name"/>
            <field name="responsable"/>
            </group>
        </form>
        </field>
    </record>

    <record id="action_gestion_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">gestion.service</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
